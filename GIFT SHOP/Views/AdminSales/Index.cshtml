@model IEnumerable<GIFT_SHOP.Models.Sale>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="navbarMenuHeroA" class="navbar-menu">
    <div class="navbar-end">
        <a class="navbar-item is-active" href="/AdminDeliveries">
            จัดการข้อมูลประเภทการส่งสินค้า
        </a>
        <a class="navbar-item is-active" href="/AdminStaus">
            จัดการสถานะการชำระเงิน
        </a>
    </div>
</div>

<table class="table table-hover table-bordered text-nowrap">
    <tr class="thead-light">
        <th>
            @Html.DisplayNameFor(model => model.S_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.S_add)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.S_sum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.S_slip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.S_packagenumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delivery.Delivery_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.U_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stau.Staus_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.S_date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.S_add)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.S_sum)
    </td>
    <td>
        <center>
            <img src="~/img/slips/@Html.DisplayFor(modelItem => item.S_slip)"
                 alt="img"
                 style="height : 30px; width : auto;"
                 asp-append-version="true" />
        </center>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.S_packagenumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Delivery.Delivery_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.U_name) &nbsp; @Html.DisplayFor(modelItem => item.User.U_lastname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Stau.Staus_name)
    </td>
    <td>
        <center>
            @Html.ActionLink("แก้ไข", "Edit", new { id = item.S_ID }) |
            <a class="" href="/AdminSaleDetails?id=@item.S_ID&&uid=@item.U_ID">
                <i class="fa fa-eye" aria-hidden="true"></i>
            </a> @*|
            @Html.ActionLink("ลบ", "Delete", new { id = item.S_ID })*@
        </center>
    </td>
</tr>
    }

</table>
