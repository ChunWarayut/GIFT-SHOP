            </th>
            <th>
                @Html.DisplayNameFor(model => model.U_tel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.U_mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.U_add)
            </th> 
        </tr>

        @foreach (var item in Model)
