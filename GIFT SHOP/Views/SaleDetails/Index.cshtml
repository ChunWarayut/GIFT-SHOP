        @*<th>
            @Html.DisplayNameFor(model => model.User.U_username)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product.P_name)
    </td>
    <td>
        <center>
            <img src="~/img/products/@Html.DisplayFor(modelItem => item.Product.P_img)"
                 alt="img"
                 style="height : 30px; width : auto;"
                 asp-append-version="true" />
        </center>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sd_number)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Pro_Price)
    </td>
    @*<td>
            @Html.DisplayFor(modelItem => item.Sale.S_add)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.U_username)
        </td>*@
    <td>
        @*@Html.ActionLink("Edit", "Edit", new { id = item.S_ID }) |*@
