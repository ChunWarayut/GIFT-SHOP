@model IEnumerable<GIFT_SHOP.Models.SaleDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<center>
    <h2>ตะกร้าสินค้า</h2>
</center>

<table class="table table-hover table-bordered">
    <tr class="thead-light">
        <th>
            @Html.DisplayNameFor(model => model.Product.P_name)
        </th>
        <th>
            <center>@Html.DisplayNameFor(model => model.Product.P_img)</center>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sd_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pro_Price)
        </th>
