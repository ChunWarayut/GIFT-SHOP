<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{
        if (Session["User_Id"] == null)
        {
            Response.Redirect("~/AdminLogin/Index");
        }
    }
</head>
<body>
    <section class=" is-Light is-fullheight">
        <!-- Hero head: will stick at the top -->
        <div class="hero-head">
            <nav class="navbar shadow rounded">
                <div class="container">
                    <div class="navbar-brand">
                        <div class="navbar-item">
                            <img src="~/img/logo.png" />
                        </div>
                        <span class="navbar-burger burger" data-target="navbarMenuHeroA">
                            <span></span>
                            <span></span>
                            <span></span>
                        </span>
                    </div>
                    <div id="navbarMenuHeroA" class="navbar-menu">
                        <div class="navbar-end">
                            <a class="navbar-item is-active" href="/AdminCategories">
                                ข้อมูลประเภทสินค้า
                            </a>
                            <a class="navbar-item" href="/AdminProducts">
                                ข้อมูลสินค้า
                            </a>
                            <a class="navbar-item" href="/AdminSaleDetails">
                                ข้อมูลสถานะการขาย
                            </a>
                            <a class="navbar-item" href="/AdminUsers">
                                ข้อมูลผู้ใช้งาน
                            </a>
                            <a class="navbar-item" href="/Report">
                                รายงาน
                            </a>
                            <a class="navbar-item"href="/AdminLogin/Logout">
                                ออกจากระบบ
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>

        <!-- Hero content: will be in the middle -->
        <div class="hero-body">
            <div class="container">
                @RenderBody()
            </div>
        </div>

    </section>
    <footer class="footer">
        <div class="content has-text-centered">
            <p>
                <strong class="copy-right">
                    &copy; Copyright 2019 by Kibshop
                </strong>

            </p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
