@model GIFT_SHOP.Models.Sale

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>หน้ายืนยันข้อมูลการชำระเงิน</h2>

@using (Html.BeginForm(Html.BeginForm("Create", "Sales", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Staus_ID, new { @class = "form-control", @Value = '1' })
    @Html.HiddenFor(model => model.U_ID, new { @class = "form-control", @Value = Session["User_ID"] })

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.S_date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.S_date, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Now, type = "text", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.S_date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.S_add, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.S_add, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.S_add, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.D_ID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("D_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.D_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.S_sum, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.S_sum, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Price, @readonly = "readonly"  } })
            @Html.ValidationMessageFor(model => model.S_sum, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.S_slip, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.S_slip, new { type = "file" })
            @Html.ValidationMessageFor(model => model.S_slip, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.Staus_ID, "Staus_ID", htmlAttributes: new { @class = "control-label col-md-2" })
